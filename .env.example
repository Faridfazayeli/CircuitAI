# ====================================
# CircuitAI - Environment Configuration
# ====================================

# Application
NODE_ENV=development
APP_NAME=CircuitAI
APP_VERSION=1.0.0
APP_PORT=3000
APP_URL=http://localhost:3000
APP_SECRET=change-this-in-production

# Database - PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=circuitai_dev
DATABASE_URL=postgres://postgres:password@localhost:5432/circuitai_dev

# Database - MongoDB
MONGO_URI=mongodb://admin:password@localhost:27017/circuitai_ai
MONGO_DB_NAME=circuitai_ai

# Cache - Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379/0

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-secret-key
JWT_REFRESH_EXPIRES_IN=30d

# Password
BCRYPT_SALT_ROUNDS=12

# AI Services
AI_SERVICE_URL=http://localhost:5000
OCR_MODEL_PATH=./models/ocr
TENSORFLOW_SERVING_URL=http://localhost:8501

# File Upload
MAX_FILE_SIZE=10485760 # 10MB
UPLOAD_PATH=./uploads
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/jpg

# Payment Gateways
ZARINPAL_MERCHANT_ID=your-merchant-id
ZARINPAL_SANDBOX=true
IDPAY_API_KEY=your-api-key
IDPAY_SANDBOX=true

# Email (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=support@circuitai.app

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# Security
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests per window
CORS_ORIGIN=http://localhost:8080,http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Mobile App
MOBILE_APP_NAME=CircuitAI
MOBILE_APP_ID=com.circuitai.app
MOBILE_APP_VERSION=1.0.0
